<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ISTW Internal Web</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/MenuPakHendi/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/MenuPakHendi/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/MenuPakHendi/Content/animate.min.css" rel="stylesheet" />

    <!-- Custom styling plus plugins -->
    <link href="~/MenuPakHendi/css/custom.css" rel="stylesheet" />
    <link href="~/MenuPakHendi/Content/iCheck/flat/green.css" rel="stylesheet" />

    <script src="~/MenuPakHendi/Scripts/jquery-2.2.0.min.js"></script>
    <script src="~/MenuPakHendi/Scripts/jquery-ui-1.11.4.min.js"></script>

    <!-- select2 -->
    <link href="~/MenuPakHendi/Content/css/select2.min.css" rel="stylesheet" />

</head>
<body class="nav-md">
    <div class="container body">
        <div class="main_container">
            <!-- sidebar menu -->
            <div class="col-md-3 left_col">
                <div class="left_col scroll-view">
                    <div class="navbar nav_title" style="border: 0;">
                        <a href=/ class="site_title"><i class="fa fa-home"></i> <span>ITMS WebApp</span></a>
                    </div>
                    <div class="clearfix"></div>
                    <br />

                    <!-- sidebar menu -->
                    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
                        <div class="menu_section">
                            <h3></h3>
                            <ul class="nav side-menu">
                                <li>
                                    <a><i class="fa fa-edit"></i> Security <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu" style="display: none">
                                        
                                        <li>@Html.ActionLink("Surat Masuk", "Index", "SuratMasuks")</li>
                                        <li>@Html.ActionLink("Truk Keluar", "Index", "TrukReports")</li>
                                        
                                    </ul>
                                </li>
                                <li>
                                    <a><i class="fa fa-windows"></i> Maintenance <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu" style="display: none">
                                        
                                        <li>@Html.ActionLink("Maintenance System", "Index", "MtcReports")</li>
                                        
                                    </ul>
                                </li>
                                <li>
                                    <a><i class="fa fa-desktop"></i> Laporan <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li>@Html.ActionLink("Kerusakan", "Index", "LapService")</li>
                                        @*<li>@Html.ActionLink("Tambah Kendaraan", "Create", "Kendaraan")</li>*@
                                    </ul>
                                </li>
                            </ul>
                        </div>

                    </div>
                    <!-- /sidebar menu -->
                    <!-- /menu footer buttons -->
                    <!-- /menu footer buttons -->
                </div>
            </div>


            <!-- top navigation -->
            <!-- top navigation -->
            <div class="top_nav">
                <div class="nav_menu">
                    <nav>
                        <div class="nav toggle">
                            <a id="menu_toggle"><i class="fa fa-bars"></i></a>
                        </div>
                        @Html.Partial("_LoginPartial")
                    </nav>
                </div>
            </div>
            <!-- /top navigation -->
            <!-- page content -->
            <div class="right_col" role="main">
                <div class="">

@RenderBody()

                </div>

                <!-- footer content -->
                <footer>
                    <div class="">
                        <p class="pull-right">
                            ©2016 - <a href="http://www.istw.co.id">PT. Indonesia Steel Tube Works</a>
                        </p>
                    </div>
                    <div class="clearfix"></div>
                </footer>
            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/MenuPakHendi/Scripts/bootstrap.min.js"></script>
    <script src="~/MenuPakHendi/Scripts/jquery.nicescroll.min.js"></script>
    <script src="~/MenuPakHendi/Scripts/custom.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
